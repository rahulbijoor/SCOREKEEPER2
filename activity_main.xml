<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeper.MainActivity">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/soccer"
       android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.example.android.scorekeeper.MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.scorekeeper.MainActivity" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM A"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/team_a_score1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textColor="#260704"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fouls"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/team_a_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="GOAL"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:background="#FF0000"
            android:onClick="goal"/>
        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="FOUL"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:background="#FF0000"
            android:onClick="foul"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM B"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/team_b_score1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textColor="#260704"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fouls"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"

            />
        <TextView
            android:id="@+id/team_b_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />
        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="GOAL"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:background="#FF0000"
            android:onClick="goal2"/>
        <Button
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="FOUL"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:background="#FF0000"
            android:onClick="foul2"/>

    </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="RESET"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:background="#FF9800"
        android:onClick="reset"
        android:id="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:text="Call" />

</RelativeLayout>
